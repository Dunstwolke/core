<div class="contentview" id="filelist">
  <div class="list">
    <? for(context.files) |file| { ?>
    <div class="dfs-item" href="#">
      <div class="toolbar">
        <a href="#" title="Open file"><img src="/img/file-view.svg" /></a>
        <a href="#" title="Edit file"><img src="/img/file-edit.svg" /></a>
        <span class="spacer"></span>
        <a href="/file/<? try output.print("{}", .{file.uuid}); ?>" title="Open detailsâ€¦"><img src="/img/file-details.svg" /></a>
      </div>
      <img class="icon" src="/img/<? try output.writeAll(context.getIcon(file)); ?>">
      <? if(file.user_name) |name| { ?>
      <span class="filename"><? try output.writeAll(name); ?></span>
      <? } else { ?>
      <span class="filename unnamed">unnamed</span>
      <? } ?>
    </div>
    <? } ?>
  </div>
</div>